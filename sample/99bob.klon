bottle := block(i,
     if(i == 0, return "no more bottles of beer")
     if(i == 1, return "1 bottle of beer")
     return "" .. i .. " bottles of beer"
)

for(i, 99, 1,
     current := bottle(i)
     write(current, " on the wall, ", current, ",\n",
          "take one down, pass it around,\n",
          bottle(i - 1), " on the wall.\n\n")
)